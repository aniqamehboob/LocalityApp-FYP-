<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff656565">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_tv"
            android:textSize="20sp"
            android:id="@+id/email_tv" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/email_linear"
        android:layout_above="@+id/pass_linear"
        android:background="@drawable/round_corner"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"

        >

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/enter_email"
            android:layout_weight="1"
            android:textSize="18sp"
            android:inputType="text"

            />


    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pass_tv"
            android:textSize="20sp"
            android:id="@+id/pass_tv"
            android:layout_marginTop="25dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/pass_linear"
        android:background="@drawable/round_corner"
        android:layout_below="@+id/email_linear"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"

        >


        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/enter_pass"
            android:layout_weight="1"
            android:textSize="18sp"
            android:inputType="text"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:weightSum="2
           ">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="@string/checkbox"
                android:textColor="#FFFFFF"
                android:id="@+id/checkbox"


                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_pass"
            android:text="@string/forgot_pass"
            android:textColor="#FFFFFF"
            android:linksClickable="true"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            />
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/pass_linear"
            android:id="@+id/login_btn"
            android:textSize="20sp"
            android:text="@string/login_btn"
            android:layout_marginTop="40dp"

        />



</LinearLayout>

</RelativeLayout>

